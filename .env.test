# Test Environment Configuration
NODE_ENV=test
PORT=3001

# Test Database (SQLite in memory)
DATABASE_URL=sqlite::memory:
DATABASE_SSL=false

# Test JWT Configuration
JWT_SECRET=test-jwt-secret-key-for-testing-only-not-for-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=1d
JWT_ISSUER=spotify-api-security-test
JWT_AUDIENCE=spotify-api-users-test

# Test Security Configuration
BCRYPT_SALT_ROUNDS=4
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=60000
ALLOWED_ORIGINS=http://localhost:3001

# Test File Upload Configuration
MAX_FILE_SIZE=1048576
UPLOAD_PATH=./tests/uploads
ALLOWED_FILE_TYPES=audio/mpeg,audio/wav

# Test Logging Configuration
LOG_LEVEL=error
LOG_FILE_PATH=./tests/logs

# Disable external services in tests
ENABLE_METRICS=false
ENABLE_SWAGGER=false
ENABLE_DEBUG_LOGS=false