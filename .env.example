# Spotify API Environment Configuration Template
# Copy this file to .env and fill in the values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME="Spotify API"
APP_VERSION="1.0.0"
APP_DESCRIPTION="Secure Music Streaming API"
NODE_ENV="development"

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
HOST="0.0.0.0"
LOG_LEVEL="debug"
REQUEST_TIMEOUT=30000
BODY_LIMIT="1mb"
UPLOAD_LIMIT="50mb"

# =============================================================================
# URLs
# =============================================================================
API_BASE_URL="http://localhost:3000/api"
FRONTEND_URL="http://localhost:3001"
SUPPORT_EMAIL="support@spotify-api.com"
TERMS_URL="https://spotify-api.com/terms"
PRIVACY_URL="https://spotify-api.com/privacy"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST="localhost"
DB_PORT=5432
DB_NAME="spotify_api"
DB_USER="spotify_user"
DB_PASSWORD="your_secure_password_here"
DB_SSL="false"
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_CONNECTION_TIMEOUT=10000
DB_STATEMENT_TIMEOUT=30000
DB_ENABLE_LOGGING="false"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET="your_very_secure_jwt_secret_at_least_32_characters_long"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_EXPIRES_IN="7d"
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGINS="http://localhost:3001,http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Security Headers
ENABLE_CSP="true"
ENABLE_HSTS="true"

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
STORAGE_PROVIDER="local"
STORAGE_LOCAL_PATH="./uploads"
MAX_FILE_SIZE=52428800
ALLOWED_MIME_TYPES="audio/mpeg,audio/wav,audio/flac,audio/aac,audio/ogg,image/jpeg,image/png,image/webp"

# AWS S3 Configuration (if using S3)
# S3_BUCKET="your-s3-bucket"
# S3_REGION="us-east-1"
# S3_ACCESS_KEY="your-s3-access-key"
# S3_SECRET_KEY="your-s3-secret-key"

# Google Cloud Storage Configuration (if using GCS)
# GCS_PROJECT_ID="your-gcs-project"
# GCS_BUCKET="your-gcs-bucket"
# GCS_KEY_FILE="path/to/service-account.json"

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================
REDIS_ENABLED="false"
REDIS_HOST="localhost"
REDIS_PORT=6379
# REDIS_PASSWORD="your-redis-password"
REDIS_DB=0
REDIS_KEY_PREFIX="spotify:"
REDIS_TTL=3600

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_PROVIDER="smtp"
FROM_EMAIL="noreply@spotify-api.com"
FROM_NAME="Spotify API"

# SMTP Configuration
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"

# SendGrid Configuration
# SENDGRID_API_KEY="your-sendgrid-api-key"

# AWS SES Configuration
# SES_REGION="us-east-1"
# SES_ACCESS_KEY="your-ses-access-key"
# SES_SECRET_KEY="your-ses-secret-key"

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
ENABLE_HEALTH_CHECKS="true"
ENABLE_METRICS="true"
ENABLE_TRACING="false"
LOG_RETENTION_DAYS=30

# External Monitoring Services
# SENTRY_DSN="your-sentry-dsn"
# DATADOG_API_KEY="your-datadog-api-key"
# PROMETHEUS_ENABLED="false"

# =============================================================================
# DOCUMENTATION CONFIGURATION
# =============================================================================
ENABLE_SWAGGER="true"
# SWAGGER_USERNAME="admin"
# SWAGGER_PASSWORD="secure-password"
# SWAGGER_ALLOWED_IPS="127.0.0.1,::1"

