# Production Environment Configuration
NODE_ENV=production

# Server
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=warn
REQUEST_TIMEOUT=30000

# URLs
API_BASE_URL=https://api.spotify-api.com/v1
FRONTEND_URL=https://spotify-api.com

# Database
DB_HOST=prod-db.spotify-api.com
DB_PORT=5432
DB_NAME=spotify_api_production
DB_USER=spotify_prod_user
# DB_PASSWORD=set_via_secrets_manager_or_vault
DB_SSL=true
DB_POOL_MIN=10
DB_POOL_MAX=50
DB_ENABLE_LOGGING=false

# Security (All secrets must be set via secure methods)
# JWT_SECRET=set_via_secrets_manager_or_vault
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# CORS (Strict whitelist)
CORS_ORIGINS=https://spotify-api.com,https://www.spotify-api.com,https://admin.spotify-api.com

# Rate Limiting (Strict)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Security Headers (All enabled)
ENABLE_CSP=true
ENABLE_HSTS=true

# Storage (S3 with encryption)
STORAGE_PROVIDER=s3
S3_BUCKET=spotify-api-production-uploads
S3_REGION=us-east-1
# S3_ACCESS_KEY=set_via_iam_roles_preferred
# S3_SECRET_KEY=set_via_iam_roles_preferred
MAX_FILE_SIZE=52428800

# Redis (Required in production)
REDIS_ENABLED=true
REDIS_HOST=prod-redis.spotify-api.com
REDIS_PORT=6379
# REDIS_PASSWORD=set_via_secrets_manager
REDIS_DB=0
REDIS_KEY_PREFIX=spotify:prod:

# Email (AWS SES for production)
EMAIL_PROVIDER=ses
SES_REGION=us-east-1
# SES_ACCESS_KEY=set_via_iam_roles_preferred
# SES_SECRET_KEY=set_via_iam_roles_preferred
FROM_EMAIL=noreply@spotify-api.com
FROM_NAME=Spotify API

# Monitoring (All enabled)
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=true
ENABLE_TRACING=true
LOG_RETENTION_DAYS=90
# SENTRY_DSN=set_via_secrets_manager
# DATADOG_API_KEY=set_via_secrets_manager
PROMETHEUS_ENABLED=true

# Documentation (Highly restricted)
ENABLE_SWAGGER=false
# If enabled, must be protected:
# SWAGGER_USERNAME=admin
# SWAGGER_PASSWORD=set_via_secrets_manager
# SWAGGER_ALLOWED_IPS=specific_admin_ips_only

# SSL (Required)
DB_SSL_ENABLED=true
DB_SSL_CERT_DIR=/etc/ssl/certs/postgresql
DB_SSL_SERVERNAME=prod-db.spotify-api.com

# Additional Production Settings
TRUST_PROXY=true
SECURE_COOKIES=true
SESSION_SECURE=true