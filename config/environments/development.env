# Development Environment Configuration
NODE_ENV=development

# Server
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=debug
REQUEST_TIMEOUT=30000

# URLs
API_BASE_URL=http://localhost:3000/api
FRONTEND_URL=http://localhost:3001

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=spotify_api_dev
DB_USER=spotify_user
DB_PASSWORD=dev_password_123
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_ENABLE_LOGGING=true

# Security (Development - Less Secure)
JWT_SECRET=dev_jwt_secret_for_development_only_not_secure
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=10

# CORS (Allow all localhost)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:3001

# Rate Limiting (More Permissive)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# Security Headers (Relaxed)
ENABLE_CSP=false
ENABLE_HSTS=false

# Storage
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./uploads/dev
MAX_FILE_SIZE=52428800

# Redis (Optional in dev)
REDIS_ENABLED=false

# Email (Console logging in dev)
EMAIL_PROVIDER=smtp
FROM_EMAIL=dev@spotify-api.local
FROM_NAME=Spotify API Dev

# Monitoring
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=true
ENABLE_TRACING=false
LOG_RETENTION_DAYS=7

# Documentation
ENABLE_SWAGGER=true

# SSL (Disabled in dev)
DB_SSL_ENABLED=false